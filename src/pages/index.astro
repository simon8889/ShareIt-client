---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import FileSharingIlustration from '../assets/rb_24925.png';
---

<Layout title="ShareIt">
	<main>
		<div>
			<h2>Effortless File Sharing at Your Fingertips!</h2>
			<p>ShareIt makes file sharing effortless! Scan a QR code or click a link to send documents, images, or videos instantly. Enjoy temporary links for secure and hassle-free sharing, right at your fingertips!</p>
			<a href="/files/upload/">
				<button>Share It</button>
			</a>
		</div>
		<Image src={ FileSharingIlustration } alt='File sharing ilustration' width={450}/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1000px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.7;
		display: flex;
		align-items: center;
		color: var(--text-color);
	}
	
	h2 {
		font-family: 'Montserrat', sans-serif;
		font-size: 2.6rem;
		line-height: 2.8rem;
	}
	
	p {
		font-family: 'Roboto', sans-serif;
		margin: 1rem 0;
	}
	
	button {
		font-family: 'Montserrat', sans-serif;
		font-weight: bold;
		font-size: 1.5rem;
		padding: 5px 30px;
		background: var(--title-color);
	    color: var(--background);
		border: none;
		border-radius: 10px;
		cursor: pointer;
	}
	
</style>
